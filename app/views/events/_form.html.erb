<%= form_with model:[ current_user, current_user.created_events.build ] do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |event| %>
          <li><%= event.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.label :title, "Event Title - Please enter it in below" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.label :location, "Location - Please enter it in below" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %> 
    <%= form.label :date, "Date - Please select a date below" %>
    <%= form.datetime_select :date %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>