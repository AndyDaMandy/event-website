<h1>My Events</h1>
<%= link_to "New Event", new_user_event %>
<% if current_user.events.any? %>
    <div id="events">
    <% current_user.events.each do |event| %>
        <li>
        <%= link_to event.created_at, event_path(event) %>
        </li>
    </div>
    <% end %>
<% else %>
    <div>
    <p>You haven't created any events! Click below to create some!</p>
    </div>
<% end %>